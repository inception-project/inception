  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <configuration>
            <ignoredDependencies>
              <!-- ND4J plugins - used via reflection -->
              <dependency>org.nd4j:nd4j-native:*:*</dependency>
              <dependency>org.bytedeco:*:*:*</dependency>
            </ignoredDependencies>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
