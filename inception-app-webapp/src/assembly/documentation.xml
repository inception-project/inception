<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>documentation</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- 
     First the INCEpTION resources. That way they take precedence over resources from WebAnno
     which allows us to overlay e.g. INCEpTION screenshots on WebAnno documentation. 
     -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <scope>compile</scope>
      <includes>
        <include>*:inception-*:jar</include>
      </includes>
      <unpackOptions>
        <includes>
          <include>**/META-INF/asciidoc/**</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <scope>compile</scope>
      <includes>
        <include>*:webanno-*:jar</include>
      </includes>
      <unpackOptions>
        <includes>
          <include>**/META-INF/asciidoc/**</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>